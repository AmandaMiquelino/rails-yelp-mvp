<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Restaurant Name', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Description', input_html: { class: 'form-control' } %>
  </div>

  <%= f.submit 'Create Restaurant', class: 'btn btn-primary' %>
<% end %>
